<article class="tease tease-{{post.post_type}} d-flex flex-column align-items-center px-2 pb-3" id="tease-{{post.ID}}">
	{% block content %}
		<h2 class="mb-3"><a class="text-dark text-decoration-none" href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.preview}}</p>
		{% if post.get_thumbnail %}
			<div class="img-wrapper">
				<img src="{{post.thumbnail.src}}" />
			</div>
		{% endif %}
	{% endblock %}
</article>