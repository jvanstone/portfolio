{% extends "base.twig" %}

{% block content %}
	
	<h1 class="article-h1">{{post.title}}</h1>
	
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<div class="row align-items-center">
			<div class="col-12 col-lg-6 col-xl-5 order-2 order-lg-1">
				{% include "/components/animated-circles.twig" %}
			</div>
			<div class="col-12 col-lg-6 col-xl-7 order-1 order-lg-2">
				{{post.content}}
			</div>
		</div>	
	</article>

{% endblock %}

{% block secondary_content %}

	{% if projects %}
		{% include '/partial/featured-projects.twig' %}
	{% endif %}

	{% block featured_posts %}
		{% include '/partial/featured-posts.twig' %}
	{% endblock %}

	{% include '/partial/contact-section.twig' %}

{% endblock %}
