{% extends "tease.twig" %}

{% block content %}
	<h2 class="mb-3"><a class="text-dark text-decoration-none" href="{{post.link}}">{{post.title}}</a></h2>

	{% if post.thumbnail.src %}
		<div class="img-wrapper">
			<img class="img-fluid" src="{{post.thumbnail.src}}" />
		</div>
	{% endif %}

	<p>{{post.preview.length(25).read_more(false).end('...').force}}</p>

	<a class="btn btn-primary" href="{{post.link}}">{{ __('Learn more') }}</a>
{% endblock %}