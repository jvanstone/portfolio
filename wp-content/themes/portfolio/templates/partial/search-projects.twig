<section class="section section--search-projects mb-5">
	<div class="container">
		<form id="search-projects" class="project-search">
			<div class="row gx-0 gy-3 g-md-4 w-75 mx-auto">
				<div class="col-12 col-md-6">
					<div class="project-search__option">
						<input id="input-keywords" aria-label="Search by keywords" type="text" class="search-input w-input" maxlength="256" name="search" data-name="search" placeholder="Search by keyword" />
					</div>
				</div>
				<div class="col-12 col-md-6">
					<div class="project-search__option">
						<select id="select-technology" aria-label="Search by technology" name="technology" class="select-technology" data-resource="data-technology">
							<option value="" disabled="" selected="">Search by technology</option>
							<option value="">All Technology</option>
						</select>
					</div>
				</div>
				<div class="col-12 text-center reset-container">
					<button type="reset" class="btn btn-info btn-warning btn-reset border-dark rounded-pill" aria-label="Reset">Reset Search</button>
				</div>
			</div>

			
		</form>
	</div>
</section>
<div class="container">
	<div id="no-results" class="border rounded border-danger my-4 p-3 text-center">
		<p class="fw-bold">Sorry, we couldn't find what you were looking for. Please try again.</p>
	</div>
</div>
