{% if contact_section.add_to_page %}
	<section id="contact" class="section--contact wow fadeInUp" data-wow-delay=".5s">
		<div class="container">
			<div class="row">

				<h2 class="section-heading section-heading--green mb-4"><span>{{ __('Contact Now') }}</span></h2>

				<div class="col-12 col-md-8">
					<div class="section--contact__form">
						{{ function('do_shortcode', '[contact-form-7 id="' ~ contact_section.form_id ~ '" title="Contact Now" html_id="contact-now"]') }}
					</div>
				</div>
				<div class="col-12 col-md-4 d-md-flex flex-col">

					<div class="section--contact__details">
					
						<h2>{{site.name}}</h2>

						{% include "common/social-icons.twig" %}

						<a class="btn btn-warning border-warning rounded-pill pt-2" href="#" data-bs-toggle="modal" data-bs-target="#viewResume">View Resume</a>
					</div>
						
				</div>
			</div>
		</div>
	</section>
{% endif %}